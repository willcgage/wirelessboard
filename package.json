{
  "name": "wirelessboard",
  "version": "1.1.0",
  "description": "An intelligent wireless device tray for ethernet enabled Shure microphones.",
  "main": "main.js",
  "scripts": {
    "server": "./.venv/bin/python py/wirelessboard.py",
    "server:venv": "./.venv/bin/python py/wirelessboard.py",
    "server:sys": "python3 py/wirelessboard.py",
    "setup:venv": "node scripts/setup-venv.js",
    "postinstall": "npm run setup:venv",
    "build": "node node_modules/webpack/bin/webpack.js --mode production --progress --config=webpack.config.js",
    "build:dev": "node node_modules/webpack/bin/webpack.js --mode development --watch --config=webpack.config.js",
    "server:watch": "nodemon --watch static --watch demo.html --watch css --watch js --watch py --ignore 'config/config.json' --ignore 'config/**/*.json' --ext js,json,html,css,py --exec \"./.venv/bin/python py/wirelessboard.py\"",
  "dev": "concurrently \"npm run build:dev\" \"npm run server:watch\"",
  "bundle:server": "node scripts/run-pyinstaller.js",
  "bundle:server:win": "node scripts/build-universal.js",
  "bundle:server:universal": "node scripts/build-universal.js",
  "release:mac": "npm run build && npm run bundle:server:universal && npm run release:mac:builder -- --publish never",
  "release:mac:ci": "npm run build && npm run bundle:server:universal && npm run release:mac:builder -- --publish always",
    "release:mac:builder": "electron-builder --mac --config electron-builder.yml",
    "release:win": "npm run build && npm run bundle:server:win && npm run release:win:builder -- --publish never",
    "release:win:ci": "npm run build && npm run bundle:server:win && npm run release:win:builder -- --publish always",
    "release:win:builder": "electron-builder --win --config electron-builder.yml",
    "release:pi": "npm run build && npm run bundle:server && python py/package_pi.py",
    "pip:lock": "node scripts/update-lock.js",
    "check:version": "node scripts/check-version-sync.js",
    "version": "node scripts/sync-version.js",
    "pack": "electron-builder --config electron-builder.yml",
    "static": "python -m http.server 8058"
  },
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/willcgage/wirelessboard.git"
  },
  "author": "wirelessboard maintainers",
  "bugs": {
    "url": "https://github.com/willcgage/wirelessboard/issues"
  },
  "homepage": "https://github.com/willcgage/wirelessboard",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@electron/rebuild": "3.6.1",
    "@ibm/plex": "^6.4.1",
    "@popperjs/core": "^2.11.8",
    "@shopify/draggable": "^1.1.4",
    "babel-loader": "^9.2.1",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "nodemon": "^3.1.10",
    "qrcode": "^1.5.4",
    "sass": "^1.92.1",
    "sass-loader": "^16.0.5",
    "smoothie": "^1.36.1",
    "style-loader": "^4.0.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "whatwg-fetch": "^3.6.20"
  },
  "overrides": {
    "glob": "^10.4.5",
    "rimraf": "^5.0.0",
    "@electron/get": "^3.1.0",
    "@electron/rebuild": "3.6.1",
    "boolean": "file:vendor/boolean"
  }
}
